{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "shortcut-rs",
  "version": "0.1.0",
  "identifier": "com.shortcut-rs.dev",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Shortcuts",
        "width": 300,
        "height": 400,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "visible": false
      },
      {
        "label": "settings",
        "title": "Settings - Shortcuts",
        "url": "settings.html",
        "width": 700,
        "height": 600,
        "resizable": true,
        "visible": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
